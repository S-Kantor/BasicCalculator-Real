<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main$PlaceholderFragment">

    <TextView
        android:text="@string/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/HeaderText" />

    <TextView
        android:id="@+id/container1"
        android:text="@string/Output"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/num1"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/HeaderText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="numberClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/num2"
        android:layout_alignBottom="@+id/num1"
        android:layout_toRightOf="@+id/num1"
        android:onClick="numberClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/num3"
        android:layout_alignTop="@+id/num2"
        android:layout_toRightOf="@+id/num2"
        android:onClick="numberClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/num4"
        android:layout_alignBottom="@+id/num3"
        android:layout_toRightOf="@+id/num3"
        android:onClick="numberClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/num4"
        android:layout_toRightOf="@+id/num4"
        android:onClick="numberClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/add"
        android:onClick="Add"
        android:layout_below="@+id/num1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minus"
        android:layout_alignTop="@+id/add"
        android:layout_toRightOf="@+id/add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equals"
        android:layout_alignBottom="@+id/minus"
        android:layout_toRightOf="@+id/minus"
        android:onClick="Equals"/>

    <TextView
        android:id="@+id/textView2"
        android:text="@string/Equals1"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container1"
        android:layout_toRightOf="@+id/minus"
        android:layout_marginTop="32dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operation Selected"
        android:id="@+id/OperationSelected"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/add"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Start"
        android:id="@+id/Service1"
        android:layout_alignTop="@+id/equals"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ServiceStart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service End"
        android:id="@+id/Service2"
        android:layout_below="@+id/Service1"
        android:layout_alignLeft="@+id/Service1"
        android:layout_alignStart="@+id/Service1"
        android:onClick="ServiceEnd" />
</RelativeLayout>
