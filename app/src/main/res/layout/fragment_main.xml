<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main$PlaceholderFragment">

    <TextView
        android:text="@string/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/HeaderText" />

    <TextView
        android:id="@+id/container1"
        android:text="@string/Output"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignTop="@+id/divide"
        android:layout_toRightOf="@+id/num7"
        android:layout_toEndOf="@+id/num7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/num1"
        android:onClick="numberClicked"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/num2"
        android:onClick="numberClicked"
        android:layout_above="@+id/num0"
        android:layout_toRightOf="@+id/num1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/num3"
        android:onClick="numberClicked"
        android:layout_toEndOf="@+id/num2"
        android:layout_above="@+id/num0"
        android:layout_toRightOf="@+id/num2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/num4"
        android:onClick="numberClicked"
        android:layout_above="@+id/num1"
        android:layout_alignLeft="@+id/num1"
        android:layout_alignStart="@+id/num1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:onClick="numberClicked"
        android:layout_above="@+id/num2"
        android:layout_alignLeft="@+id/num2"
        android:layout_alignStart="@+id/num2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/add"
        android:onClick="Add"
        android:layout_below="@+id/num6"
        android:layout_alignLeft="@+id/minus"
        android:layout_alignStart="@+id/minus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minus"
        android:layout_toEndOf="@+id/HeaderText"
        android:layout_toStartOf="@+id/Service1"
        android:layout_below="@+id/multiply"
        android:layout_above="@+id/add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/multiply"
        android:layout_alignStart="@+id/multiply" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equals"
        android:onClick="Equals"
        android:layout_below="@+id/num3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/minus"
        android:layout_alignStart="@+id/minus" />

    <TextView
        android:id="@+id/textView2"
        android:text="@string/Equals1"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/num9"
        android:layout_alignBottom="@+id/OperationSelected"
        android:layout_toRightOf="@+id/num9"
        android:layout_alignRight="@+id/HeaderText"
        android:layout_alignEnd="@+id/HeaderText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operation Selected"
        android:id="@+id/OperationSelected"
        android:textSize="25sp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_toStartOf="@+id/num9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Service2"
        android:layout_alignRight="@+id/Service2"
        android:layout_alignEnd="@+id/Service2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Start"
        android:id="@+id/Service1"
        android:onClick="ServiceStart"
        android:visibility="visible"
        android:layout_below="@+id/HeaderText"
        android:layout_toRightOf="@+id/num0"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service End"
        android:id="@+id/Service2"
        android:onClick="ServiceEnd"
        android:visibility="visible"
        android:layout_alignTop="@+id/Service1"
        android:layout_toLeftOf="@+id/Service1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/num0"
        android:onClick="numberClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/num6"
        android:onClick="numberClicked"
        android:layout_above="@+id/num3"
        android:layout_alignLeft="@+id/num3"
        android:layout_alignStart="@+id/num3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/num7"
        android:onClick="numberClicked"
        android:layout_above="@+id/num4"
        android:layout_alignLeft="@+id/num4"
        android:layout_alignStart="@+id/num4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/num8"
        android:onClick="numberClicked"
        android:layout_alignTop="@+id/num7"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/num9"
        android:onClick="numberClicked"
        android:layout_alignTop="@+id/num8"
        android:layout_alignLeft="@+id/num6"
        android:layout_alignStart="@+id/num6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/multiply"
        android:onClick="Add"
        android:layout_below="@+id/divide"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divide"
        android:onClick="Add"
        android:layout_above="@+id/num9"
        android:layout_alignRight="@+id/multiply"
        android:layout_alignEnd="@+id/multiply"
        android:layout_alignLeft="@+id/multiply"
        android:layout_alignStart="@+id/multiply" />
</RelativeLayout>
